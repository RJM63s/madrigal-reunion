# Server Configuration
PORT=3001
NODE_ENV=development

# Client URL for CORS
# In development, set to your client URL (e.g., http://localhost:5173)
# In production, set to your production domain
CLIENT_URL=http://localhost:5173

# Admin Password Protection
# Set this to protect the admin dashboard
ADMIN_PASSWORD=your_secure_admin_password_here

# Google Sheets Integration (optional)
# Set GOOGLE_SHEETS_ENABLED=true to enable syncing with Google Sheets
GOOGLE_SHEETS_ENABLED=false
GOOGLE_SHEET_ID=your_google_sheet_id_here
GOOGLE_SERVICE_ACCOUNT_EMAIL=your-service-account@your-project.iam.gserviceaccount.com
GOOGLE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYour private key here\n-----END PRIVATE KEY-----\n"
